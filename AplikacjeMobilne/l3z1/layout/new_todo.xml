<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cancel" android:id="@+id/cancelButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Wybierz date"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:id="@+id/dateView"
                android:onClick="getDate"
                app:layout_constraintEnd_toStartOf="@+id/hourView"
                android:layout_marginEnd="42dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/aActivity"/>
        <TextView
                android:onClick="getTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hourView"
                android:text="Wybierz godzine"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/aActivity"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                app:layout_constraintStart_toEndOf="@+id/textView71" android:layout_marginStart="8dp"
                android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/hActivity"/>
        <TextView
                android:text="Priorytet:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView71"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/hActivity"/>
        <TextView
                android:text="Nowe zadanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
        <ImageButton
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/confirm"
                android:id="@+id/confirmButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <ImageButton
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/activityempty"
                android:id="@+id/aActivity" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
                android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/workempty"
                android:id="@+id/wActivity" app:layout_constraintStart_toEndOf="@+id/hActivity"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/aActivity"
                android:layout_marginEnd="8dp" android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
                android:layout_width="wrap_content" android:background="@null"
                android:layout_height="wrap_content" app:srcCompat="@drawable/house"
                android:id="@+id/hActivity" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="50dp" android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:id="@+id/editText" android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView71"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/textView111" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Zadanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView111" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView71"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
