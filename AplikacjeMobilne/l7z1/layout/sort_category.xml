<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ffffff">
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="1" tools:layout_editor_absoluteX="25dp">
        <TextView
                android:text="Kategorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryView"
                android:textSize="24sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <View
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:background="@android:color/black"
                android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView7"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/view5"/>
        <TextView
                android:text="Dom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textHouse"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view5"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/house"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/textHouse"
                android:layout_marginStart="80dp"
                app:layout_constraintTop_toBottomOf="@+id/view5"/>
        <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/view3"/>
        <TextView
                android:text="Praca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textWork" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/work"
                android:id="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/textWork" android:layout_marginStart="73dp"
                app:layout_constraintTop_toBottomOf="@+id/view3"/>
        <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/view4"/>
        <TextView
                android:text="Aktywnosci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textActiv" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/activity"
                android:id="@+id/imageView6" app:layout_constraintTop_toBottomOf="@+id/view4"
                app:layout_constraintStart_toEndOf="@+id/textActiv" android:layout_marginStart="36dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView7" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintStart_toEndOf="@+id/textPrio"
                android:layout_marginStart="36dp"/>
        <TextView
                android:text="Priorytetowe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPrio"
                app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"/>
        <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/view6"/>
        <TextView
                android:text="Dzisiejsze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textToday" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view6" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textToday"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/view7"/>
        <TextView
                android:text="Jutrzejsze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTomorrow" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view7" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cancel"
                android:id="@+id/imageView10"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/categoryView"
                android:layout_marginStart="60dp"/>
        <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textTomorrow"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/view8"/>
        <TextView
                android:text="Wszystkie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAll" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view8" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textAll"
                app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>