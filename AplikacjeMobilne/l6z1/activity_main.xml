<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@id/editText">
        <Button
                android:tag="simplify"
                android:text="simplify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="factor"
                android:text="factor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button2" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="zeros"
                android:text="zeroes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:id="@+id/linearLayout2">
        <Button
                android:tag="derive"
                android:text="derive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button4" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="integrate"
                android:text="integr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button5" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="area"
                android:text="area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button6" android:layout_weight="1"
                android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:id="@+id/linearLayout3">
        <Button
                android:tag="abs"
                android:text="abs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button7" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="tangent"
                android:text="tangent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button8" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="log"
                android:text="log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button9" android:layout_weight="1"
                android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:id="@+id/linearLayout4">
        <Button
                android:tag="sin"
                android:text="sin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button10" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="cos"
                android:text="cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button11" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="tan"
                android:text="tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button12" android:layout_weight="1"
                android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
    >
        <Button
                android:tag="arcsin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button13" android:layout_weight="1"
                android:text="arcsin" android:onClick="onClick"/>
        <Button
                android:tag="arccos"
                android:text="arccos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button14" android:layout_weight="1"
                android:onClick="onClick"/>
        <Button
                android:tag="arctan"
                android:text="arctan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button15" android:layout_weight="1"
                android:onClick="onClick"/>
    </LinearLayout>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Dzialanie"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/editText"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>